<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_settings_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Settings"
            android:textSize="50dp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:orientation="horizontal">



        <ImageButton
            android:layout_marginStart="30dp"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_home_24"
            android:backgroundTint="@color/black"
            android:gravity="center" />

        <EditText
            android:id="@+id/name_et"
            android:layout_width="200dp"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/white"
            app:theme="@style/EditTextStyle"
            android:layout_gravity="center"


            >
        </EditText>te"
        android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/alarm_on_white"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"

            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_alarm_on_24"
            android:backgroundTint="@color/black"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/alarm_on_pink"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_alarm_on_pink_24"
            android:backgroundTint="@color/black"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/alarm_off_white"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_alarm_off_24"
            android:backgroundTint="@color/black"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/alarm_off_pink"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_alarm_off_pink_24"
            android:backgroundTint="@color/black"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/alarm_time_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_access_time_24"/>
        <TextView
            android:id="@+id/alarm_time_text"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="3"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="알람설정시간대">

        </TextView>
    </LinearLayout>


</LinearLayout>